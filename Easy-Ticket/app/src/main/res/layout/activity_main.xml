<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/MidnightBlue"
    tools:context=".Main">
    <!-- The main activity xml file. Contains the basic options for the user
         following the website color concept. Created by Manolis Kirtas on 17/12/2014
         Modified by Evan Daravigkas on 12/07/2015.-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sid"
        android:gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            style="@style/main_title_style"
            android:gravity="center"
            android:id="@+id/textEasyTicket"
            android:textColor="#ffffcc18" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_choice"
        android:id="@+id/contactButton1"
        android:textColor="#ff000000"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/registrationButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_choice"
        android:id="@+id/aboutButton1"
        android:textColor="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_choice"
        android:id="@+id/registrationButton1"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_choice"
        android:id="@+id/loginButton1"
        android:textColor="#ff000000"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/registrationButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:singleLine="false" />


</RelativeLayout>
