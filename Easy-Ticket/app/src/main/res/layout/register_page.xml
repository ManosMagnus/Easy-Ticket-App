<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue">

    <!-- This xml represents a new registration form with fields based
         on the website. Created by Kostas Dimkas at 17/12/2014.
         Modified by Alex Allafi at 18/12/2014.
         Modified by Evan Daravigkas at 12/07/2015.-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        style="@style/title_style"
        android:gravity="center"
        android:text="@string/register_title"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffcc18" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:columnCount="2"
        android:rowCount="7"
        android:layout_marginBottom="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_choice"
            android:id="@+id/nameTextView"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="#ffffcc18" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_view"
            style="@style/hints_style"
            android:inputType="textPersonName"
            android:hint="@string/default_name"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="#ffffcc18"
            android:ems="11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surname_choice"
            android:id="@+id/surnameTextView"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffcc18" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surname_view"
            android:inputType="textPersonName"
            style="@style/hints_style"
            android:hint="@string/default_surname"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ffffcc18"
            android:ems="11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_choice"
            android:id="@+id/emailTextView"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ffffcc18" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/hints_style"
            android:hint="@string/default_email"
            android:inputType="textEmailAddress"
            android:id="@+id/email_view"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="11"
            android:textColor="#ffffcc18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_ver_choice"
            android:id="@+id/emailVerTextView"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffcc18"
            android:width="100dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/hints_style"
            android:hint="@string/default_password_ver"
            android:inputType="textEmailAddress"
            android:id="@+id/email_ver_view"
            android:layout_row="3"
            android:layout_column="1"
            android:ems="11"
            android:textColor="#ffffcc18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_choice"
            android:id="@+id/username"
            android:layout_columnSpan="1"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffcc18" />

        <EditText
            android:layout_width="wrap_content"
            android:hint="@string/default_username"
            style="@style/hints_style"
            android:id="@+id/editText"
            android:inputType="textPersonName"
            android:layout_row="4"
            android:layout_column="1"
            android:ems="11"
            android:textColor="#ffffcc18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_choice"
            android:id="@+id/passwordTextView"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ffffcc18" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/hints_style"
            android:hint="@string/default_password"
            android:inputType="textPassword"
            android:id="@+id/password_view"
            android:layout_row="5"
            android:layout_column="1"
            android:ems="11"
            android:textColor="#ffffcc18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_ver_choice"
            android:id="@+id/passwordVerTextView"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#ffffcc18"
            android:width="100dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/hints_style"
            android:hint="@string/default_password_ver"
            android:inputType="textPassword"
            android:id="@+id/password_ver_view"
            android:layout_row="6"
            android:layout_column="1"
            android:ems="11"
            android:textColor="#ffffcc18" />

    </GridLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/register_button"
        android:id="@+id/register_button"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ff000000" />

</LinearLayout>
